<body>
    <%- include("nav.html") %>
    <h4>수정하기</h4>
    <!-- put을 쓰려면 method-override 다운 받아야 함. -->
    <form action="/edit/<%= data._id %>" method="POST">
        <!-- div내에 안 넣으면 body 인식 안 되는 듯. -->
        <label>할 일</label>
        <input type="text" name="title" value="<%= data.title %>">
        <label>마감</label>
        <input type="text" name="date" value="<%= data.date %>">
        <button type="submit">제출</button>
    </form>
</body>
